                    {
                        "name": "user_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "Date"
                                        },
                                        "updated_at": {
                                            "type": "Date"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not exists!"
                    }
                }
            }
