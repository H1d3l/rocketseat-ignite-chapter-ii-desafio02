                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "Date"
                                            },
                                            "updated_at": {
                                                "type": "Date"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "User not exists or User is not admin!!"
                        }
                    }
